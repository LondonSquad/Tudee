#!/bin/bash
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")
pattern="^((feat|comp|fix|refactor|test|chore|ci): [a-z0-9].*|Merge .+|merge .+)"
if [[ ! "$commit_msg" =~ $pattern ]]; then
echo ""
echo "âŒ Invalid commit message!"
echo "ğŸ‘‰ Must match: type: message"
echo "âœ… Allowed types: feat, comp, fix, refactor, test, chore, ci"
echo "ğŸ“Œ Example: feat: add login screen"
echo "ğŸ“Œ Example: Merge branch 'main' into 'feature/login'"
echo "ğŸ“Œ Example: Merge pull request #123 from user/feature/login"
exit 1
fi