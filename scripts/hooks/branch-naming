#!/bin/bash
branch_name=$(git symbolic-ref --short HEAD)

# Allow special branch names
if [[ "$branch_name" == "main" || "$branch_name" == "development" ]]; then
    exit 0
fi

# Check pattern for other branches
pattern="^(feature|component|fix|hotfix|release|chore|test)/[a-z0-9\-]+$"
if [[ ! "$branch_name" =~ $pattern ]]; then
echo ""
echo "âŒ Invalid branch name: '$branch_name'"
echo "ğŸ‘‰ Must match pattern: type/branch-name OR be 'main' or 'development'"
echo "âœ… Allowed types: feature, component, fix, hotfix, release, chore, test"
echo "âœ… Special branches: main, development"
echo "ğŸ“Œ Example: feature/add-login-screen"
exit 1
fi